<header>
  <nav
    class="navbar navbar-expand-md navbar-dark bg-success justify-content-between"
  >
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <% if(user) { %>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <form class="form-inline" action="/logout" method="post">
      <p style="font-size: 16px">
        Logged in as: <%= user.email %>
        <span
          ><button class="btn btn-outline-dark my-2 my-sm-0" type="submit">
            Logout
          </button>
        </span>
      </p>
    </form>
    <% } else{%>
    <div class="btn-group" role="group" aria-label="Basic example">
      <a href="/login" class="btn btn-primary">Login</a>
      <a href="/register" class="btn btn-outline-dark">Register</a>
    </div>
    <% } %>
  </nav>
</header>
